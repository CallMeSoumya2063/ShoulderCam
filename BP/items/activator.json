{
    "format_version": "1.20.0",
    "minecraft:item": {
        "description": {
            "identifier": "shouldercam:activator",
            "category": "Equipment"
        },
        "components": {
            "minecraft:icon": {
                "texture": "activator"
            },
            "minecraft:cooldown": {
			"category": "shouldercam",
			"duration": 0.5
			},
            "minecraft:max_stack_size": 1,
            "minecraft:on_use": {
                "on_use": {
                    "event": "switch_perspective"
                }
            }
        },
        "events": {
            "switch_perspective": {
                "sequence": [
                    {
                        "run_command": {
                            "command": [
                                "tag @s add shouldercam",
                                "replaceitem entity @s slot.weapon.mainhand 0 shouldercam:reset",
                                "title @s actionbar ยงlยง9Camera has been activated!"
                            ],
                            "target": "holder"
                        }
                    }
                ]
            }
        }
    }
}
